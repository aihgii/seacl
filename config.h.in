set ("${PROJECT_NAME}_SOURCE_DIR" source)
set ("${PROJECT_NAME}_BINARY_DIR" install/bin)

set (CMAKE_MODULE_PATH ${PROJECT_SOURCE_DIR}/build/CMakeModules)
set (CMAKE_INCLUDE_PATH ${${PROJECT_NAME}_SOURCE_DIR})
set (EXECUTABLE_OUTPUT_PATH ${PROJECT_SOURCE_DIR}/${${PROJECT_NAME}_BINARY_DIR})
set (CMAKE_INSTALL_PREFIX /usr)
set (CMAKE_VERBOSE_MAKEFILE ON)

set (INSTALL_PATH ${CMAKE_INSTALL_PREFIX}/bin/${PROJECT_NAME})
set (CONFIG_PATH /etc/conf.d)

if(CMAKE_COMPILER_IS_GNUCXX)
    set (CMAKE_CXX_FLAGS "-O0 -Wall")
else()
    message (FATAL_ERROR "Cannot build on non Unix systems")
endif()
